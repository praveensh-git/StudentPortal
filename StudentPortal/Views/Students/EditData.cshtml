@model List<StudentPortal.Models.Entitie.Student>

<h1>X Standard Students</h1>

<div>
    <a class="btn btn-primary" asp-controller="Students" asp-action="Add">AddStudent</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No</th>
            <th>Percentage</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Percentage</td>
                <td>

                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>

                    <form asp-action="Delete" asp-controller="Students" method="post" style="display:inline;" onsubmit="return confirmDelete(event, this);">
                        <input type="hidden" name="id" value="@student.Id" />
                        <button type="submit" class="btn btn-danger ms-3">Delete</button>
                    </form>

                    <a class="btn btn-success" asp-controller="Students" asp-action="TransferStudent" asp-route-id="@student.Id">Promote</a>
                </td>
            </tr>
        }
    </tbody>

</table>









@section Scripts {
    <script>
        function confirmDelete(event, form) {
            event.preventDefault();

            const isConfirmed = confirm("Are you sure you want to delete this student?");
            if (isConfirmed) {
                form.submit();
            } else {
                console.log("Deletion cancelled.");
            }
        }
    </script>
}


