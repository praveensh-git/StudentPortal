
@model List<StudentPortal.Models.AddStudentViewModel>

<div  class="container">
    <h2>Add Student</h2>
    <div>
        <form id="addStudentForm" method="post">
            <div class="mt-3">
                <label class="form-label">Name</label>
                <input type="text" required class="form-control" id="Name" />
            </div>
            <div class="mt-3">
                <label class="form-label">Email</label>
                <input type="email" required id="Email" class="form-control"  />
            </div>
            <div class="mt-3">
                <label class="form-label">Phone No</label>
                <input type="number" id="Phone" required class="form-control"  />
            </div>
            <div class="mt-3">
                <label class="form-label">Percentage</label>
                <input type="number" id="Percentage" required class="form-control"  />
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

   


